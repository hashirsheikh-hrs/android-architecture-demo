<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#8B8A8A</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textStyleLarge" parent="textStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textStyleSmall" parent="textStyle">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="headerTextStyle" parent="textStyle">
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
    <style name="smallHeaderTextStyle" parent="headerTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="LargeHeaderTextStyle" parent="headerTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="linkTextStyle" parent="textStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#2A2ADF</item>
    </style>
    <style name="linkTextStyleLarge" parent="linkTextStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="linkTextStyleSmall" parent="linkTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
